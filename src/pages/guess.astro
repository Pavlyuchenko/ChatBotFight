        width: 48px;

        transition: 0.25s cubic-bezier(0.04, 0.37, 0.36, 1) 0.025s;
    }
    #switch-button:hover img {
        rotate: 180deg;
        transform: scale(1.1);
    }
    #switch-button::after {
        content: "Click to change your choice";
        font-size: 20px;
        pointer-events: none;

        position: absolute;

        top: calc(100% + 15px);
        left: 50%;
        transform: translateX(-50%);

