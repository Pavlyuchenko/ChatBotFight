<style is:global>
    :root {
        --background: #f9f9f9;
        --primary: #4285f4;
        --secondary: #dd2011;
        --gpt-grey: #40414f;
        --black: #000;
        --white: #fff;
    }
    @font-face {
        font-family: "Graublau Web";
        src: url("/public/Metropolos-Regular.otf");
        src: url("/public/Metropolos-SemiBold.otf");
        src: url("/public/Metropolos-Bold.otf");
    }

    html,
    body {
        font-family: "Metropolis", system-ui, sans-serif;
        background-color: var(--background);
        color: var(--black);

        margin: 0;
        padding: 0;

        min-height: 100vh;

        display: flex;
        flex-direction: column;
    }

    button {
        font-family: "Metropolis", system-ui, sans-serif;
    }

    .primary-button {
        text-decoration: none;

        background-color: var(--primary);
        color: var(--white);

        border: 4px solid var(--gpt-grey);
        border-radius: 10px;
        box-sizing: border-box;

        padding: 10px 40px;

        font-size: 30px;
        font-weight: 600;

        cursor: pointer;
        transition: 0.25s;
    }
    .primary-button:hover {
        background-color: #346bc5;
    }
    .primary-button:active {
        background-color: #21447e;
    }

    @keyframes show-up {
        0% {
            opacity: 0;
            transform: translateX(-50%) translateY(-10px);
        }
        100% {
            opacity: 1;
            transform: translateX(-50%) translateY(0);
        }
    }
</style>

<style>
    h2 {
        font-size: 26px;
        color: var(--black);

        margin: 0;
    }

    a {
        text-decoration: none;
        color: var(--black);
    }

    header {
        display: flex;
        align-items: center;
        gap: 15px;

        padding: 20px 40px;
    }

    #max-h {
        min-height: 98vh;

        display: flex;
        flex-direction: column;
    }

    @media (max-width: 600px) {
        header {
            padding-left: 20px;
        }
    }
</style>
